<div>
    {% block blur_elysium_slides_detail_view_card_content_form %}
        <sw-card
            :position-identifier="positionIdentifiers.detail.base.general"
            :title="$tc('BlurElysiumSlides.baseForm.generalCardTitle')"
        >

        {% block blur_elysium_slides_basic_form %}
            <sw-container columns="1fr" gap="0 32px">

                {% block blur_elysium_slides_input_name %}
                    <sw-text-field
                        v-model="slide.name" 
                        :error="blurElysiumSlidesNameError"
                        :label="$tc('BlurElysiumSlides.baseForm.labelInput.title')"
                        :placeholder="$tc('BlurElysiumSlides.baseForm.labelInput.placeholder')"
                        :helpText="$tc('BlurElysiumSlides.baseForm.labelInput.helpText')"
                        required
                    />
                {% endblock %}

                {% block blur_elysium_slides_input_headline %}
                    <blur-card-section>

                        <blur-paragraph 
                            :title="$tc('blurElysiumSlides.slideSettings.headline.title')"
                            :style="{
                                marginBottom: '16px'
                            }" />

                        <sw-container columns="1fr 1fr 1fr 1fr" gap="0 16px">
                            <sw-text-field
                                v-model="slide.title" 
                                :label="$tc('blurElysiumSlides.slideSettings.headline.label')"
                                :placeholder="$tc('blurElysiumSlides.slideSettings.headline.placeholder')"
                                :helpText="$tc('blurElysiumSlides.slideSettings.headline.helpText')"
                                :style="{
                                    gridColumn: '1 / 5'
                                }" />

                            <sw-number-field 
                                type="int"
                                :label="$tc('blurElysiumSlides.slideSettings.display.common.fontSize')"
                                :step="1"
                                :min="0"
                                :value="viewportSettings.headline?.fontSize"
                                @change="value => setViewportSetting({key:'headline.fontSize', value: value})"
                            >
                                <template #hint>
                                    <blur-elysium-device-hint />
                                </template>
                            </sw-number-field> 

                            {% block blur_elysium_slides_input_headline_element %}
                                <sw-select-field 
                                    v-if="slide.slideSettings"
                                    :value="slide.slideSettings.headlineElement"
                                    :label="$tc('BlurElysiumSlides.settings.headline.element.label')"
                                    :placeholder="$tc('BlurElysiumSlides.settings.headline.element.placeholder')"
                                    :helpText="$tc('BlurElysiumSlides.settings.headline.element.helpText')"
                                    @change="value => setSlideSetting({key:'headlineElement', value: value})">
                                    <option value="h1">{{ 'H1' }}</option>
                                    <option value="h2">{{ 'H2' }}</option>
                                    <option value="h3">{{ 'H3' }}</option>
                                    <option value="h4">{{ 'H4' }}</option>
                                    <option value="h5">{{ 'H5' }}</option>
                                    <option value="h6">{{ 'H6' }}</option>
                                </sw-select-field>
                            {% endblock %}

                            {% block blur_elysium_slides_input_headline_textcolor %}
                                <sw-colorpicker
                                    v-if="slide.slideSettings"
                                    colorOutput="auto"
                                    :value="slide.slideSettings.headlineTextcolor"
                                    :label="$tc('BlurElysiumSlides.settings.headline.textcolor.label')"
                                    :alpha="true"
                                    :colorLabels="true"
                                    :zIndex="100"
                                    @input="value => setSlideSetting({ key: 'headlineTextcolor', value: value })">
                                </sw-colorpicker>
                            {% endblock %}
                        </sw-container>
                    </blur-card-section>
                {% endblock %}

                {% block blur_elysium_slides_input_description %}
                    <sw-text-editor
                        v-model="slide.description"
                        :label="$tc('BlurElysiumSlides.baseForm.descriptionInput.title')"
                    />
                {% endblock %}
            </sw-container> 
        {% endblock %}

        {% block blur_elysium_slides_setting_slide_bg_color %}
            <sw-colorpicker
                v-if="slide.slideSettings"
                colorOutput="auto"
                :value="slide.slideSettings.slide?.bgColor" 
                :label="$tc('blurElysiumSlides.slideSettings.slide.bgColor')"
                :alpha="true"
                :colorLabels="true"
                :zIndex="100"
                @input="value => setSlideSetting({ key: 'slide.bgColor', value: value })">
            </sw-colorpicker>
        {% endblock %}

        <blur-card-section>

            <blur-paragraph 
                :title="$tc('blurElysiumSlides.slideSettings.slide.bgGradient.title')"
                :style="{
                    marginBottom: '16px'
                }" />

            <sw-container 
                columns="repeat(4, minmax(0, 1fr))" 
                gap="0 16px">

                <sw-colorpicker
                    v-if="slide.slideSettings"
                    colorOutput="auto"
                    :value="slide.slideSettings.slide?.bgGradient?.startColor" 
                    :label="$tc('blurElysiumSlides.slideSettings.slide.bgGradient.startColor')"
                    :alpha="true"
                    :colorLabels="true"
                    :zIndex="100"
                    @input="value => setSlideSetting({ key: 'slide.bgGradient.startColor', value: value })">
                </sw-colorpicker>

                <sw-colorpicker
                    v-if="slide.slideSettings"
                    colorOutput="auto"
                    :value="slide.slideSettings.slide?.bgGradient?.endColor" 
                    :label="$tc('blurElysiumSlides.slideSettings.slide.bgGradient.endColor')"
                    :alpha="true"
                    :colorLabels="true"
                    :zIndex="100"
                    @input="value => setSlideSetting({ key: 'slide.bgGradient.endColor', value: value })">
                </sw-colorpicker>

                <sw-select-field 
                    v-if="slide.slideSettings"
                    :value="slide.slideSettings.slide?.bgGradient?.gradientType ?? 'linear-gradient'"
                    :label="$tc('blurElysiumSlides.slideSettings.slide.bgGradient.gradientType')"
                    @change="value => setSlideSetting({key:'slide.bgGradient.gradientType', value: value})">
                    <option value="linear-gradient">Linear</option>
                </sw-select-field>

                <sw-number-field
                    v-if="slide.slideSettings"
                    type="int"
                    :step="1"
                    :min="-360"
                    :max="360"
                    :value="slide.slideSettings.slide?.bgGradient?.gradientDeg ?? 45" 
                    :label="$tc('blurElysiumSlides.slideSettings.slide.bgGradient.gradientDeg')"
                    @change="value => setSlideSetting({ key: 'slide.bgGradient.gradientDeg', value: value })"
                />
            </sw-container>
        </blur-card-section>

        {% block blur_elysium_slides_setting_slide_css_class %}
            <sw-text-field
                v-if="slide.slideSettings"
                :value="slide.slideSettings.slideCssClass" 
                :label="$tc('BlurElysiumSlides.settings.sllideCssClass.title')"
                :placeholder="$tc('BlurElysiumSlides.settings.sllideCssClass.placeholder')"
                :helpText="$tc('BlurElysiumSlides.settings.sllideCssClass.helpText')"
                @input="value => setSlideSetting({ key: 'slideCssClass', value: value })"
            />
        {% endblock %}
        </sw-card>
    {% endblock %}

    {% block blur_elysium_slides_detail_view_card_linking_form %}
        <sw-card
            :position-identifier="positionIdentifiers.detail.base.linking"
            :title="$tc('BlurElysiumSlides.baseForm.linkingCardTitle')"
        >

        {% block blur_elysium_slides_linking_form %}
            <sw-container columns="1fr 1fr" gap="0 2rem" align="center">
                
                {% block blur_elysium_slides_input_url %}
                    <sw-field
                        type="text"
                        v-model="slide.url"
                        :label="$tc('BlurElysiumSlides.baseForm.urlInput.title')"
                        :placeholder="$tc('BlurElysiumSlides.baseForm.urlInput.placeholder')"
                        :helpText="$tc('BlurElysiumSlides.baseForm.urlInput.helpText')"
                    />
                {% endblock %}

                {% block blur_elysium_slides_input_url_target %}
                    <sw-select-field 
                        v-if="slide.slideSettings"
                        :label="$tc('BlurElysiumSlides.settingsForm.urlSettings.target.label')"
                        :placeholder="$tc('BlurElysiumSlides.settingsForm.urlSettings.target.placeholder')"
                        :value="slide.slideSettings.urlTarget"
                        @change="value => setSlideSetting({ key: 'urlTarget', value: value })">
                        <option value="internal">{{ $tc('BlurElysiumSlides.settingsForm.urlSettings.target.options.internal') }}</option>
                        <option value="external">{{ $tc('BlurElysiumSlides.settingsForm.urlSettings.target.options.external') }}</option>
                    </sw-select-field>
                {% endblock %}

                {% block blur_elysium_slides_input_button_label %}
                    <sw-text-field
                        v-model="slide.button_label" 
                        :label="$tc('BlurElysiumSlides.baseForm.buttonLabelInput.title')"
                        :placeholder="$tc('BlurElysiumSlides.baseForm.buttonLabelInput.placeholder')"
                        :helpText="$tc('BlurElysiumSlides.baseForm.buttonLabelInput.helpText')"
                        :disabled="urlOverlayActive"
                        :class="'bc__my-0'"
                    />
                {% endblock %}

                {% block blur_elysium_slides_input_button_appearance %}
                    <sw-select-field 
                        v-if="slide.slideSettings"
                        :value="slide.slideSettings.buttonAppearance"
                        :label="$tc('BlurElysiumSlides.settings.buttonAppearance.label')"
                        :placeholder="$tc('BlurElysiumSlides.settings.buttonAppearance.placeholder')"
                        :helpText="$tc('BlurElysiumSlides.settings.buttonAppearance.helpText')"
                        :disabled="urlOverlayActive"
                        @change="value => setSlideSetting({ key: 'buttonAppearance', value: value })">
                        <option value="primary">{{ $tc('BlurElysiumSlides.settings.buttonAppearance.options.primary') }}</option>
                        <option value="secondary">{{ $tc('BlurElysiumSlides.settings.buttonAppearance.options.secondary') }}</option>
                        <option value="success">{{ $tc('BlurElysiumSlides.settings.buttonAppearance.options.success') }}</option>
                        <option value="danger">{{ $tc('BlurElysiumSlides.settings.buttonAppearance.options.danger') }}</option>
                        <option value="warning">{{ $tc('BlurElysiumSlides.settings.buttonAppearance.options.warning') }}</option>
                        <option value="info">{{ $tc('BlurElysiumSlides.settings.buttonAppearance.options.info') }}</option>
                        <option value="light">{{ $tc('BlurElysiumSlides.settings.buttonAppearance.options.light') }}</option>
                        <option value="dark">{{ $tc('BlurElysiumSlides.settings.buttonAppearance.options.dark') }}</option>
                    </sw-select-field>
                {% endblock %}
                
            </sw-container>

            {% block blur_elysium_slides_input_url_overlay %}
                <sw-switch-field 
                    v-if="slide.slideSettings"
                    :label="$tc('BlurElysiumSlides.settingsForm.urlSettings.overlay.inputLabel')" 
                    :value="slide.slideSettings.urlOverlay"
                    @change="value => setSlideSetting({ key: 'urlOverlay', value: value })">
                </sw-switch-field>                
                <p>
                    {{ $tc('BlurElysiumSlides.settingsForm.urlSettings.overlay.description') }}
                </p>
            {% endblock %}
        {% endblock %}
        </sw-card>
    {% endblock %}
</div>