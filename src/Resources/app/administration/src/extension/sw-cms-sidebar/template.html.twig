{% block sw_cms_sidebar_block_overview_category_options %}
    {% parent %}

    {% block sw_cms_sidebar_block_overview_category_blur_elysium_blocks %}
        <option value="blur-elysium-blocks">
            {{ $tc('blurElysium.cmsBlockGroup') }}
        </option>
    {% endblock %}
{% endblock %}

{% block sw_cms_sidebar_block_layout_settings_content %}
    {% parent %}

    <template v-if="selectedBlock.type === 'blur-elysium-block-two-col'">
        <sw-sidebar-collapse 
            :expand-on-loading="false">

            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            <template #header>
                <span v-html="$tc('blurElysiumBlock.settingLabel')" />
            </template>

            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            <template #content>
                
                <blur-elysium-block-two-col-config 
                    :settings="selectedBlock.customFields" />

            </template>
        </sw-sidebar-collapse>
    </template>
{% endblock %}