<sw-card
    position-identifier="positionIdentifier.placeholder"
    :content-padding="0">

    <template #title>
        <blur-card-title 
            :title="$tc('blurElysiumSlides.forms.displayContainer.label')" 
            icon="blurph-align-center-horizontal-simple-bold" />
    </template>

    <blur-card-section
        :description="$tc('blurElysiumSlides.forms.displayContainer.description')">

        <sw-container
            columns="repeat(2, minmax(0, 1fr))"
            align="start"
            gap="30px">

            <mt-switch 
                @change="slideViewportSettings.container.columnWrap = $event"
                :checked="slideViewportSettings.container.columnWrap"
                :label="$tc('blurElysiumSlides.forms.slideDirectionColumn.label')" 
                :style="{
                    alignSelf: 'center'
                }"/>

            <sw-select-field 
                :label="$tc('blurElysiumSlides.forms.slideContentOrder.label')"
                :helpText="$tc('blurElysiumSlides.forms.slideContentOrder.helpText')"
                :options="[
                    {id: 'default', name: $tc('blurElysiumSlides.forms.slideContentOrder.default') },
                    {id: 'reverse', name: $tc('blurElysiumSlides.forms.slideContentOrder.reverse') }
                ]"
                v-model:value="slideViewportSettings.container.order" />            

            <sw-container
                columns="200px 1fr"
                align="end"
                gap="30px">

                <blur-device-number-field 
                    :label="$tc('blurElysiumSlides.forms.slideWidth.label')"
                    :device="deviceView"
                    :disabled="slideViewportSettings.container.maxWidthDisabled === true"
                    v-model:value="slideViewportSettings.container.maxWidth" /> 

                <sw-switch-field 
                    :label="$tc('blurElysiumSlides.forms.slideWidth.noMaxWidth')"
                    v-model:value="slideViewportSettings.container.maxWidthDisabled" />

            </sw-container>

            <sw-colorpicker 
                :label="$tc('blurElysium.general.backgroundColor')"
                v-model:value="slide.slideSettings.container.bgColor" />

        </sw-container>

    </blur-card-section>

    <blur-card-section
        :title="$tc('blurElysium.general.spacing')"
        title-icon="blurph-ruler-bold">

        <sw-container
            columns="repeat(4, minmax(0, 1fr))"
            gap="30px">

            <blur-device-number-field 
                :label="$tc('blurElysium.general.paddingX')"
                :device="deviceView"
                v-model:value="slideViewportSettings.container.paddingX" /> 

            <blur-device-number-field 
                :label="$tc('blurElysium.general.paddingY')"
                :device="deviceView"
                v-model:value="slideViewportSettings.container.paddingY" /> 

            <blur-device-number-field 
                :label="$tc('blurElysium.general.gap')"
                :device="deviceView"
                v-model:value="slideViewportSettings.container.gap" /> 

            <blur-device-number-field 
                :label="$tc('blurElysium.general.borderRadius')"
                :device="deviceView"
                v-model:value="slideViewportSettings.container.borderRadius" /> 

        </sw-container>

    </blur-card-section>

    <blur-card-section
        :title="$tc('blurElysium.general.alignment')"
        :description="$tc('blurElysiumSlides.forms.displayContainer.alignmentDescription')"
        title-icon="blurph-arrows-out-line-horizontal-bold">

        <sw-container
            columns="repeat(4, minmax(0, 1fr))"
            gap="30px">

            <blur-device-select-field 
                :label="$tc('blurElysium.general.jusitifyContent')" 
                :device="deviceView"
                :options="[
                    { id: 'normal', name: $tc('blurElysium.general.jusitifyNormal') },
                    { id: 'flex-start', name: $tc('blurElysium.general.jusitifyStart') },
                    { id: 'center', name: $tc('blurElysium.general.jusitifyCenter') },
                    { id: 'flex-end', name: $tc('blurElysium.general.jusitifyEnd') },
                    { id: 'stretch', name: $tc('blurElysium.general.jusitifyStretch') },
                    { id: 'space-between', name: $tc('blurElysium.general.jusitifyBetween') },
                    { id: 'space-around', name: $tc('blurElysium.general.jusitifyAroud') }
                ]"
                v-model:value="slideViewportSettings.container.justifyContent" />

            <blur-device-select-field 
                :label="$tc('blurElysium.general.alignItems')" 
                :device="deviceView"
                :options="[
                    { id: 'flex-start', name: $tc('blurElysium.general.alignStart') },
                    { id: 'center', name: $tc('blurElysium.general.alignCenter') },
                    { id: 'flex-end', name: $tc('blurElysium.general.alignEnd') }
                ]"
                v-model:value="slideViewportSettings.container.alignItems" />

        </sw-container>

    </blur-card-section>

</sw-card>
