    <blur-column>
        <py-number-field
            :label="$tc('blurElysium.general.vertical')"
            :placeholder="viewportsPlaceholder('container.paddingY', 15)"
            :step="1"
            :allow-empty="true"
            v-model="slideViewportSettings.container.paddingY"
        />
    </blur-column>
    <blur-column>
        <py-number-field
            :label="$tc('blurElysium.general.gap')"
            :placeholder="viewportsPlaceholder('container.gap', 20)"
            :step="1"
            :allow-empty="true"
