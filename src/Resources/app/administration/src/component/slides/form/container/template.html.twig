<blur-section>

    <blur-column>
        <blur-section
            gap
            padding
            :style="viewStyle({
                mobile: { borderBottom: '1px solid #ddd' },
            })">

            <blur-column>

                <mt-switch 
                    class="blur-switch-input"
                    @change="slideViewportSettings.container.columnWrap = $event"
                    :checked="slideViewportSettings.container.columnWrap"
                    :label="$tc('blurElysiumSlides.forms.slideDirectionColumn.label')" />
            </blur-column>

            <blur-column
                :cols-tablet="6">

                <blur-select-input 
                    :label="$tc('blurElysiumSlides.forms.slideContentOrder.label')"
                    :helpText="$tc('blurElysiumSlides.forms.slideContentOrder.helpText')"
                    :placeholder="devicePlaceholder('container.order', 'default', 'blurElysiumSlides.forms.slideContentOrder')"
                    :device="deviceView"
                    :show-device="true"
                    :options="[
                        {value: 'default', label: $tc('blurElysiumSlides.forms.slideContentOrder.default') },
                        {value: 'reverse', label: $tc('blurElysiumSlides.forms.slideContentOrder.reverse') }
                    ]"
                    @on-device="deviceSwitch"
                    v-model:value="slideViewportSettings.container.order" /> 
            </blur-column>

            <blur-column
                :cols-tablet="6">

                <blur-number-input 
                    :label="$tc('blurElysiumSlides.forms.slideWidth.label')"
                    :device="deviceView"
                    :placeholder="devicePlaceholder('container.maxWidth', $t('blurElysium.general.noLimit'))"
                    :show-device="true"
                    @on-device="deviceSwitch"
                    v-model:value="slideViewportSettings.container.maxWidth" /> 
            </blur-column>

            <blur-column
                :cols-tablet="6">

                <blur-colorpicker
                    :label="$tc('blurElysium.general.backgroundColor')"
                    v-model:value="slide.slideSettings.container.bgColor" />
            </blur-column>

        </blur-section>
    </blur-column>

    <blur-column>

        <blur-section
            gap
            padding
            :style="viewStyle({
                mobile: { borderBottom: '1px solid #ddd' },
            })"
            :title="$tc('blurElysium.general.spacing')"
            title-icon="blurph-ruler-bold">

            <blur-column
                :cols-tablet="6"
                :cols-desktop="3">

                <blur-number-input  
                    :label="$tc('blurElysium.general.paddingX')"
                    :device="deviceView"
                    :placeholder="devicePlaceholder('container.paddingX', 15)"
                    :show-device="true"
                    @on-device="deviceSwitch"
                    v-model:value="slideViewportSettings.container.paddingX" /> 
            </blur-column>

            <blur-column
                :cols-tablet="6"
                :cols-desktop="3">

                <blur-number-input       
                    :label="$tc('blurElysium.general.paddingY')"
                    :device="deviceView"
                    :placeholder="devicePlaceholder('container.paddingY', 15)"
                    :show-device="true"
                    @on-device="deviceSwitch"
                    v-model:value="slideViewportSettings.container.paddingY" /> 
            </blur-column>

            <blur-column
                :cols-tablet="6"
                :cols-desktop="3">

                <blur-number-input 
                    :label="$tc('blurElysium.general.gap')"
                    :device="deviceView"
                    :placeholder="devicePlaceholder('container.gap', 20)"
                    :show-device="true"
                    @on-device="deviceSwitch"
                    v-model:value="slideViewportSettings.container.gap" /> 
            </blur-column>

            <blur-column
                :cols-tablet="6"
                :cols-desktop="3">

                <blur-number-input 
                    :label="$tc('blurElysium.general.borderRadius')"
                    :device="deviceView"
                    :placeholder="devicePlaceholder('container.borderRadius', 0)"
                    :show-device="true"
                    @on-device="deviceSwitch"
                    v-model:value="slideViewportSettings.container.borderRadius" /> 
            </blur-column>

        </blur-section>
    </blur-column>

    <blur-column>
        <blur-section
            gap
            padding
            :title="$tc('blurElysium.general.alignment')"
            :description="$tc('blurElysiumSlides.forms.displayContainer.alignmentDescription')"
            title-icon="blurph-arrows-out-line-horizontal-bold">

            <blur-column
                :cols-tablet="6"
                :cols-desktop="3">

                <blur-select-input 
                    :label="$tc('blurElysium.general.jusitifyContent')" 
                    :placeholder="devicePlaceholder('container.justifyContent', 'normal', 'blurElysium.general.alignX')"
                    :device="deviceView"
                    :show-device="true"
                    :options="[
                        { value: 'normal', label: $tc('blurElysium.general.jusitifyNormal') },
                        { value: 'flex-start', label: $tc('blurElysium.general.jusitifyStart') },
                        { value: 'center', label: $tc('blurElysium.general.jusitifyCenter') },
                        { value: 'flex-end', label: $tc('blurElysium.general.jusitifyEnd') },
                        { value: 'stretch', label: $tc('blurElysium.general.jusitifyStretch') },
                        { value: 'space-between', label: $tc('blurElysium.general.jusitifyBetween') },
                        { value: 'space-around', label: $tc('blurElysium.general.jusitifyAroud') } 
                    ]"
                    @on-device="deviceSwitch"
                    v-model:value="slideViewportSettings.container.justifyContent" />
            </blur-column>

            <blur-column
                :cols-tablet="6"
                :cols-desktop="3">

                <blur-select-input 
                    :label="$tc('blurElysium.general.alignItems')" 
                    :placeholder="devicePlaceholder('container.alignItems', 'center', 'blurElysium.general.alignX')"
                    :device="deviceView"
                    :show-device="true"
                    :options="[
                        { value: 'flex-start', label: $tc('blurElysium.general.alignStart') },
                        { value: 'center', label: $tc('blurElysium.general.alignCenter') },
                        { value: 'flex-end', label: $tc('blurElysium.general.alignEnd') }
                    ]"
                    @on-device="deviceSwitch"
                    v-model:value="slideViewportSettings.container.alignItems" />
            </blur-column>

        </blur-section>
    </blur-column>
</blur-section>