<blur-section
    gap
    padding
    :style="viewStyle({
        mobile: { 
            borderBottom: '1px solid var(--color-border-secondary-default)',
            '--blur-section-gap-y': '8px',
            '--container-gap-y': '12px'
        },
    })">
    
    <blur-column>
        <mt-switch
            class="blur-switch-input"
            @change="slideViewportSettings.container.columnWrap = $event"
            :checked="slideViewportSettings.container.columnWrap"
            :label="$tc('blurElysiumSlides.forms.slideDirectionColumn.label')"
        />
    </blur-column>

    <blur-column>
        <py-select-field
            :label="$tc('blurElysiumSlides.forms.slideContentOrder.label')"
            :tooltip="$tc('blurElysiumSlides.forms.slideContentOrder.helpText')"
            :placeholder="viewportsPlaceholder('container.order', 'default', 'blurElysiumSlides.forms.slideContentOrder')"
            :options="[
                {value: 'default', label: $tc('blurElysiumSlides.forms.slideContentOrder.default') },
                {value: 'reverse', label: $tc('blurElysiumSlides.forms.slideContentOrder.reverse') }
            ]"
            v-model="slideViewportSettings.container.order"
        />
    </blur-column>

    <blur-column>
        <py-number-field
            :label="$tc('blurElysiumSlides.forms.slideWidth.label')"
            :placeholder="viewportsPlaceholder('container.maxWidth', $t('blurElysium.general.noLimit'))"
            :step="1"
            :allow-empty="true"
            v-model="slideViewportSettings.container.maxWidth"
        />
    </blur-column>

    <blur-column>
        <py-colorpicker-field
            :label="$tc('blurElysium.general.backgroundColor')"
            v-model:value="slide.slideSettings.container.bgColor"
        />
    </blur-column>
</blur-section>

<blur-section
