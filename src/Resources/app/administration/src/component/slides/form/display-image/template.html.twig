<sw-card
    position-identifier="positionIdentifier.placeholder"
    :content-padding="0"
>

    <template #title>
        <blur-card-title 
            :title="$tc('blurElysiumSlides.forms.displayImage.label')" 
            icon="blurph-image-bold" />
    </template>

    <sw-container
        columns="repeat(2, minmax(0, 1fr))"
        gap="0px">

        <blur-card-section>

            <sw-container
                columns="repeat(2, minmax(0, 1fr))"
                gap="30px"
                align="end">

                <blur-device-number-field 
                    :label="$tc('blurElysiumSlides.forms.slideWidth.label')"
                    :device="deviceView"
                    :disabled="slideViewportSettings.image.maxWidthDisabled === true"
                    v-model:value="slideViewportSettings.image.maxWidth" /> 

                <sw-switch-field 
                    :label="$tc('blurElysiumSlides.forms.slideWidth.noMaxWidth')"
                    v-model:value="slideViewportSettings.image.maxWidthDisabled" />

            </sw-container>

        </blur-card-section>

        <blur-card-section
            :title="$tc('blurElysium.general.alignment')"
            title-icon="blurph-arrows-out-line-horizontal-bold">

            <sw-container
                columns="repeat(2, minmax(0, 1fr))"
                gap="30px">

                <blur-device-select-field 
                    :label="$tc('blurElysium.general.jusitifyContent')" 
                    :device="deviceView"
                    :options="[
                        { id: 'flex-start', name: $tc('blurElysium.general.jusitifyStart') },
                        { id: 'center', name: $tc('blurElysium.general.jusitifyCenter') },
                        { id: 'flex-end', name: $tc('blurElysium.general.jusitifyEnd') }
                    ]"
                    v-model:value="slideViewportSettings.image.justifyContent" />

            </sw-container>

        </blur-card-section>

    </sw-container>

</sw-card>
