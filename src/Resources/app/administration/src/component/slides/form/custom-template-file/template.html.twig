<sw-card
    position-identifier="positionIdentifier.placeholder"
    :content-padding="0">

    <template #title>
        <blur-card-title 
            :title="$tc('blurElysiumSlides.forms.customTemplateFile.label')" 
            icon="blurph-file-code-bold" />
    </template>

    <blur-card-section
        :description="$tc('blurElysiumSlides.forms.customTemplateFile.description')">

        <sw-container
            columns="repeat(1, minmax(0, 1fr))"
            gap="20px">

            <sw-text-field 
                :placeholder="$tc('blurElysiumSlides.forms.customTemplateFile.placeholder')" 
                v-model:value="slide.slideSettings.customTemplateFile" />

            <div :style="{
                    fontSize: '14px',
                    lineHeight: '1.5'
                }"
                v-if="slide.slideSettings.customTemplateFile"
                v-html="$t('blurElysiumSlides.forms.customTemplateFile.pathInfo', { file: slide.slideSettings.customTemplateFile })" />
    
        </sw-container>

    </blur-card-section>
</sw-card>