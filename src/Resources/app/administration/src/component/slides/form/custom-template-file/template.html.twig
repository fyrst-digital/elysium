<blur-section
    padding
    gap
    :title="$tc('blurElysiumSlides.forms.customTemplateFile.label')"
    :description="$tc('blurElysiumSlides.forms.customTemplateFile.description')"
    :style="{
        borderBottom: '1px solid var(--color-border-secondary-default)',
    }">

    <blur-column
        :style="{
            display: 'flex',
            flexDirection: 'column',
            gap: '12px',
        }">

        <py-text-field
            layout="column"
            :label="$tc('blurElysiumSlides.forms.customTemplateFile.fileName')"
            :placeholder="$tc('blurElysiumSlides.forms.customTemplateFile.placeholder')"
            v-model="slide.slideSettings.customTemplateFile"
        />

        <mt-banner
            v-if="slide.slideSettings.customTemplateFile"
            :title="$t('blurElysiumSlides.forms.customTemplateFile.pathInfoTitle')"
            :hide-icon="true"
            :style="{
                margin: '0px',
            }">
            <div
                v-html="$t('blurElysiumSlides.forms.customTemplateFile.pathInfo', { file: slide.slideSettings.customTemplateFile })"
            />
        </mt-banner>
    </blur-column>
</blur-section>