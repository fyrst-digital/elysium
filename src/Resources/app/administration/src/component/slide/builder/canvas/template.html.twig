<div :style="viewStyle(styles.container)">

    <div :style="{
            display: 'flex',
            flexDirection: 'row',
            alignItems: 'center',
            justifyContent: 'center',
            gap: '20px',
            flexWrap: 'wrap',
            padding: '16px',
            position: 'sticky',
            top: '0px',
            zIndex: '10',
            borderBottom: '1px solid var(--color-border-secondary-default)',
            backgroundColor: 'var(--color-background-primary-default)',
        }">

        <div>

            <div 
                :style="{
                    lineHeight: '1',
                    fontSize: '12px',
                    fontWeight: '500',
                    marginBottom: '4px',
                }">
                Seitenverhaeltnis
            </div>

            <div :style="{
                    display: 'flex',
                    flexDirection: 'row',
                    alignItems: 'center',
                    gap: '8px',
                    flexWrap: 'wrap'
                }">

                <py-number-field
                    layout="row"
                    v-model="aspectRatioX"
                    :label="false"
                    :min="1" 
                    :step="1" 
                    :style="viewStyle({
                        mobile: {
                            maxWidth: '120px',
                        }
                    })"
                    />

                <py-number-field
                    layout="row"
                    v-model="aspectRatioY"
                    :label="false"
                    :min="1" 
                    :step="1" 
                    :style="viewStyle({
                        mobile: {
                            maxWidth: '120px',
                        }
                    })"/>
            </div>
        </div>

        <div>

            <div 
                :style="{
                    lineHeight: '1',
                    fontSize: '12px',
                    fontWeight: '500',
                    marginBottom: '4px',
                }">
                Breite
            </div>

            <div :style="{
                    display: 'flex',
                    flexDirection: 'row',
                    alignItems: 'center',
                    gap: '8px',
                    flexWrap: 'wrap'
                }">

                <py-number-field
                    layout="row"
                    v-model="width"
                    placeholder="in Pixel"
                    :label="false"
                    :step="1" 
                    :allow-empty="true"
                    :style="viewStyle({
                        mobile: {
                            maxWidth: '160px',
                        }
                    })"
                    />
            </div>
        </div>

    </div>



    <div :style="viewStyle(styles.canvas)">
        <elysium-slide-preview 
            v-if="slide"
            :slide="slide"
            :device-view="device"
            :show-preview-notice="false"
            :aspect-ratio-x="aspectRatioX"
            :aspect-ratio-y="aspectRatioY"
            :max-height="'none'"
            :max-width="width"
            :style="{ flex: '1 100%' }"
        />
    </div>
</div>