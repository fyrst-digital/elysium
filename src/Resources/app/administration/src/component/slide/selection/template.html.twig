<div
    :style="{
        display: 'flex',
        flexDirection: 'column',
        gap: '24px',
    }"
>
    {{draggedSlideIndex}}
    <elysium-slide-search
        :selected-slides="selectedSlides"
        @add-slide="addSlide"
        @remove-slide="removeSlide"
    />
    <div
        v-if="selectedSlides.length > 0"
        class="elysium-slide-selection-results"
    >
        <div
            class="elysium-slide-selection-results-list"
            ref="selectionList"
        >
            <elysium-slide-selection-item
                v-for="(slide, index) in selectedSlides"
                :key="index"
                :slide="slide"
                :index="index"
                @drag-slide-start="dragSlideStart"
                @drag-slide-drop="dragSlideDrop"
                @position-up="slidePositionUp"
                @position-down="slidePositionDown"
                @edit-slide="slideEdit"
                @remove-slide="slideRemove"
            />
        </div>
    </div>
    <mt-banner
        v-if="selectedSlides.length === 0"
        variant="info"
    >
        <span v-html="$tc('blurElysiumSlides.slideSelection.listNoSelection')"/>
    </mt-banner>
</div>