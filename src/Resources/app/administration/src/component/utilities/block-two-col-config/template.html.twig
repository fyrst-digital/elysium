<sw-container
    columns="1fr"
    gap="25px"
    :style="{
        padding: '25px'
    }">

    <blur-device-switch 
        layout="row"
        show-label="false"
        :default-viewport="currentCmsDeviceView"
        @change-viewport="changeViewport" 
        :style="{
            padding: '0',
            width: '100%',
            justifyContent: 'center'
        }" />

        <sw-container 
            columns="repeat(2, minmax(0, 1fr))"
            gap="30px">

            <blur-device-number-field
                :label="$tc('blurElysiumBlock.settings.columnWidth.colOneLabel')"
                :unit="false"
                :device="activeViewport"
                :style="{
                    margin: '0'
                }"
                v-model:value="settings.viewports[activeViewport].width.colOne" />

            <blur-device-number-field
                :label="$tc('blurElysiumBlock.settings.columnWidth.colTwoLabel')"
                :unit="false"
                :device="activeViewport"
                :style="{
                    margin: '0'
                }"
                v-model:value="settings.viewports[activeViewport].width.colTwo "/>

            <blur-device-number-field
                :label="$tc('blurElysiumBlock.settings.gridGapLabel')"
                :device="activeViewport"
                :style="{
                    margin: '0',
                    gridColumn: '1 / span 2'
                }"
                v-model:value="settings.viewports[activeViewport].gridGap" />

            <sw-container 
                columns="repeat(1, minmax(0, 1fr))"
                gap="0px"
                :style="{
                    gridColumn: '1 / span 2'
                }">

                <sw-switch-field 
                    :label="$tc('blurElysiumBlock.settings.columnWrapLabel')"
                    :style="{
                        margin: '0'
                    }"
                    v-model:value="settings.viewports[activeViewport].columnWrap" />

                <sw-switch-field 
                    :label="$tc('blurElysiumBlock.settings.columnStretchLabel')"
                    :style="{
                        margin: '0'
                    }"
                    v-model:value="settings.columnStretch" />

            </sw-container>

        </sw-container>

</sw-container>