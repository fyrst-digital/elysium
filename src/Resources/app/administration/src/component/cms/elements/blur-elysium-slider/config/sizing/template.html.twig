<sw-card
    position-identifier="positionIdentifiers.placeholder"
    :content-padding="false">

    <blur-card-section
        :title="$tc('blurElysiumSlider.config.sizing.aspectRatio.label')"
        :description="$tc('blurElysiumSlider.config.sizing.aspectRatio.description')">

        <sw-container 
            columns="2fr 1fr" 
            gap="30px">


            <sw-container 
                columns="1fr 1fr"
                gap="0">

                <blur-device-number-field 
                    v-model:value="sizingViewportConfig.aspectRatio.width"
                    :label="$tc('blurElysiumSlider.config.sizing.aspectRatio.width')"
                    :unit="false"
                    :device="currentViewport"/>

                <blur-device-number-field 
                    v-model:value="sizingViewportConfig.aspectRatio.height"
                    :label="$tc('blurElysiumSlider.config.sizing.aspectRatio.height')"
                    :unit="false"
                    :device="currentViewport"/>

            </sw-container>

            <blur-device-number-field 
                v-model:value="sizingViewportConfig.maxHeight"
                :allow-empty="true"
                :label="$tc('blurElysiumSlider.config.sizing.maxHeight.label')"
                :placeholder="$tc('blurElysiumSlider.config.sizing.maxHeight.placeholder')"
                :device="currentViewport"/>

        </sw-container>

    </blur-card-section>

    <blur-card-section
        :title="$tc('blurElysiumSlider.config.sizing.spacing.label')">

        <sw-container 
            columns="repeat(2, 1fr)" 
            gap="30px">

            <blur-device-number-field 
                v-model:value="sizingViewportConfig.slidesGap"
                :label="$tc('blurElysiumSlider.config.sizing.spacing.slidesGap.label')"
                :allow-empty="true"
                :device="currentViewport"/>

            <blur-device-number-field 
                v-model:value="sizingViewportConfig.paddingY"
                :label="$tc('blurElysium.general.paddingY')"
                :device="currentViewport"/>

            <blur-device-number-field 
                v-model:value="sizingViewportConfig.paddingX"
                :label="$tc('blurElysium.general.paddingX')"
                :device="currentViewport"/>

        </sw-container>

    </blur-card-section>

</sw-card>