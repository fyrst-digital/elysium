<sw-page>
    <template #smart-bar-back>
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        <router-link
            v-if="parentRoute"
            class="smart-bar__back-btn"
            :to="{ name: parentRoute }"
        >
            <mt-icon
                name="regular-chevron-left"
                color="#999999"
                size="16"
            />
            <mt-icon
                name="regular-cog"
                color="#758CA3"
                size="16"
            />
        </router-link>
    </template>

    <template #smart-bar-header>
        <h2
            :style="{
                display: 'flex',
                alignItems: 'baseline',
                flexWrap: 'wrap',
                gap: '12px',
            }">
            <span v-html="$tc('sw-settings.index.title')" />
            <mt-icon
                name="regular-chevron-right"
                size="12" />
            <span v-html="$tc('blurElysium.settings.label')" />
        </h2>
    </template>

    <template #smart-bar-actions>
        <sw-button
            variant="primary"
            class="sw-extension-config__save-action"
            :disabled="!permissonEdit"
            @click.prevent="onSave"
        >
            {{ $tc('global.default.save') }}
        </sw-button>
    </template>

    <template #content>
        <sw-card-view>
            <sw-system-config
                ref="systemConfig"
                sales-channel-switchable
                domain="BlurElysiumSlider.breakpoints"
            >
                <template #beforeElements="{ card, config }">
                    <div
                        v-html="$tc('blurElysium.settings.breakpointsDescription')"
                        :style="{
                            fontSize: '14px',
                            lineHeight: '1.5',
                            marginBottom: '30px'
                        }"
                    />
                </template>
            </sw-system-config>
        </sw-card-view>
    </template>
</sw-page>