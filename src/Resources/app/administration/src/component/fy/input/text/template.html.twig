<fy-input 
    :tooltip="tooltip"
    :id="id"
    :label="label" 
    :error="error"
    :required="required">

    <template #input>
        <input 
            type="text"
            :id="id"
            :value="modelValue"
            @input="$emit('update:modelValue', $event.target.value)"
            :placeholder="placeholder"
            class="fy-input-text fy-input-control" />
    </template>

</fy-input>