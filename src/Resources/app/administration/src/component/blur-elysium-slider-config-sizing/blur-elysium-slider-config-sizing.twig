{% block blur_elysium_slider_config_sizing %}
    <sw-card 
        :position-identifier="positionIdentifiers.sizing.DEFAULT"
        :hero="false">

        {% block blur_elysium_slider_config_sizing_aspect_ratio %}
            <blur-card-section 
                v-if="viewportConfig"
                :position-identifier="positionIdentifiers.sizing.sectionAspectRatio">

                <blur-paragraph
                    :title="$tc('blurElysiumSlider.config.sizing.aspectRatio.label')"
                    :content="$tc('blurElysiumSlider.config.sizing.aspectRatio.description')"
                    />

                <sw-container
                    columns="2fr 1fr"
                    gap="24px">

                    <sw-container 
                        columns="1fr 1fr"
                        gap="0"
                        class="input-group">

                        <sw-number-field 
                            numberType="int"
                            v-model="viewportConfig.aspectRatio.width"
                            :label="$tc('blurElysiumSlider.config.sizing.aspectRatio.width')">
                            <template #hint><blur-elysium-device-hint /></template>
                        </sw-number-field>

                        <sw-number-field 
                            numberType="int"
                            v-model="viewportConfig.aspectRatio.height"
                            :label="$tc('blurElysiumSlider.config.sizing.aspectRatio.height')">
                            <template #hint><blur-elysium-device-hint /></template>
                        </sw-number-field>
                    </sw-container>

                    <sw-number-field 
                        numberType="int"
                        :allow-empty="true"
                        :label="$tc('blurElysiumSlider.config.sizing.maxHeight.label')"
                        :placeholder="$tc('blurElysiumSlider.config.sizing.maxHeight.placeholder')"
                        v-model="viewportConfig.maxHeight">
                        <template #suffix>Px</template>
                        <template #hint><blur-elysium-device-hint /></template>
                    </sw-number-field>

                </sw-container>
            </blur-card-section>
        {% endblock %}

        {% block blur_elysium_slider_config_sizing_spacing %}
            <blur-card-section
                v-if="viewportConfig"
                :position-identifier="positionIdentifiers.sizing.sectionSpacing"
                :last="true">

                <blur-paragraph
                    :title="$tc('blurElysiumSlider.config.sizing.spacing.label')"
                    />

                <sw-container
                    columns="1fr 1fr"
                    gap="24px">

                    <sw-number-field 
                        numberType="int"
                        :allow-empty="true"
                        :label="$tc('blurElysiumSlider.config.sizing.spacing.slidesGap.label')"
                        :placeholder="$tc('blurElysiumSlider.general.unitPlaceholderPx')"
                        v-model="viewportConfig.slidesGap">
                        <template #suffix>Px</template>
                        <template #hint><blur-elysium-device-hint /></template>
                    </sw-number-field>

                    <sw-number-field 
                        numberType="int" 
                        :label="$tc('blurElysiumSlider.config.sizing.spacing.paddingY.label')"
                        :placeholder="$tc('blurElysiumSlider.general.unitPlaceholderPx')"
                        v-model="viewportConfig.paddingY">
                        <template #suffix>Px</template>
                        <template #hint><blur-elysium-device-hint /></template>
                    </sw-number-field>

                    <sw-number-field 
                        numberType="int"
                        :label="$tc('blurElysiumSlider.config.sizing.spacing.paddingX.label')"
                        :placeholder="$tc('blurElysiumSlider.general.unitPlaceholderPx')"
                        v-model="viewportConfig.paddingX">
                        <template #suffix>Px</template>
                        <template #hint><blur-elysium-device-hint /></template>
                    </sw-number-field>

                </sw-container>
            </blur-card-section>
        {% endblock %}
    </sw-card>
{% endblock %}