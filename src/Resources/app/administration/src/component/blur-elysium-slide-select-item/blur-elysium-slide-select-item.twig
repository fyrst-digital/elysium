{% block blur_elysium_slide_select_item %} 
    <div class="blur-es-list-item"
        :style="itemStyle"
        ref="selectItem"
        draggable
        @dragstart="startDrag($event)"
        @dragenter="enterDrag($event)"
        @dragend="endDrag($event)"
        @dragleave="leaveDrag($event)">

        <template v-if="slideData && isLoading === false">

            {% block blur_elysium_slide_select_item_silde_container %}
                <div class="blur-es-list-item__slide-container">

                    <div class="blur-es-list-item__slide-labels">
                        <div class="blur-es-list-item__drag-bullet">
                            <sw-icon name="regular-grip-horizontal-s" size="16" color="#999999"></sw-icon>
                        </div>
                        <div class="blur-es-list-item__name-tag">
                            {{slideData.translated.name}}
                        </div>
                    </div>

                    {% block blur_elysium_slide_select_item_silde_content %} 
                        <div class="blur-es-list-item__slide-content">
                            <div>
                                <div class="blur-es-list-item__slide-headline">
                                    {{slideData.translated.title.replace(/<\/?[^>]+>/ig, " ")}}
                                </div>
                            </div>
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
            
            {% block blur_elysium_slide_select_item_silde_actions %}
                <div class="blur-es-list-item__slide-actions">
                    {% block blur_elysium_slide_select_item_silde_action_position_up %}
                        <sw-button 
                            class="blur-es-list-item__icon-button"
                            :disabled="false" 
                            :isLoading="isLoading"
                            @click="positionUp">
                            <sw-icon name="regular-long-arrow-up" size="16" color="#999999"></sw-icon>
                        </sw-button>
                    {% endblock %}

                    {% block blur_elysium_slide_select_item_silde_action_position_down %}
                        <sw-button 
                            class="blur-es-list-item__icon-button" 
                            :disabled="false" 
                            :isLoading="isLoading"
                            @click="positionDown">
                            <sw-icon name="regular-long-arrow-down" size="16" color="#999999"></sw-icon>
                        </sw-button>
                    {% endblock %}

                    {% block blur_elysium_slide_select_item_silde_edit %}
                        <sw-button 
                            class="blur-es-list-item__icon-button"
                            :disabled="false" 
                            :isLoading="isLoading"
                            @click="editSlide">
                            <sw-icon name="regular-file-edit" size="16" color="#189eff"></sw-icon>
                        </sw-button>
                    {% endblock %}

                    {% block blur_elysium_slide_select_item_silde_action_remove %}
                        <sw-button 
                            class="blur-es-list-item__icon-button"
                            :disabled="false" 
                            :isLoading="isLoading"
                            @click="removeSlide">
                            <sw-icon name="regular-trash" size="16" color="#eb657d"></sw-icon>
                        </sw-button>
                    {% endblock %}
                </div>
            {% endblock %}
        </template>
    </div>
{% endblock %}