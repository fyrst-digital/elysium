{% block blur_elysium_slider_config_arrows %}
    <div>

        {% block blur_elysium_slider_config_arrows_general %}
            <sw-card 
                :position-identifier="positionIdentifiers.arrowsGeneral"
                :hero="false" 
                :large="false">

                <sw-container 
                    columns="1fr"
                    gap="2rem">

                    {% block blur_elysium_slider_config_arrows_active %}
                        <sw-switch-field 
                            style="margin: 0;"
                            v-model="config.active" 
                            :label="$tc('blurElysiumSlider.config.arrows.active')" />
                    {% endblock %}

                    </sw-container>
            </sw-card>
        {% endblock %}

        {% block blur_elysium_slider_config_arrows_appearance %}
            <sw-card 
                :position-identifier="positionIdentifiers.arrowsAppearance"
                :title="$tc('blurElysiumSlider.general.appearance')"
                :hero="false" 
                :large="false">

                <sw-container 
                    columns="1fr 1fr"
                    gap="0 2rem"
                    :breakpoints="containerBreakpoints['3col']">

                    {% block blur_elysium_slider_config_arrows_icons %}
                        <sw-select-field 
                            :label="$tc('blurElysiumSlider.config.arrows.icons.label')"
                            v-model="config.icon.default">
                            <option 
                                v-for="icon in icons" 
                                :key="icon.value" 
                                :value="icon.value">{{icon.label}}</option>
                        </sw-select-field>
                    {% endblock %}

                    {% block blur_elysium_slider_config_arrow_button_size %}
                        <sw-select-field 
                            :label="$tc('blurElysiumSlider.config.arrows.size.label')"
                            v-model="config.size">
                            <option 
                                v-for="size in sizes" 
                                :key="size.value" 
                                :value="size.value">{{size.label}}</option>
                        </sw-select-field>
                    {% endblock %}

                    {% block blur_elysium_slider_config_arrow_color %}
                        <div style="position:relative;">
                            <sw-colorpicker
                                :label="$tc('blurElysiumSlider.general.iconColor')"
                                v-model="config.colors.default"
                                colorOutput="auto"
                                :alpha="true"
                                :disabled="false"
                                :colorLabels="true"
                                :zIndex="1010">
                            </sw-colorpicker>
                        </div>
                    {% endblock %}

                    {% block blur_elysium_slider_config_arrow_color_active %}
                        <div style="position:relative;">
                            <sw-colorpicker
                                :label="$tc('blurElysiumSlider.general.iconColorActive')"
                                v-model="config.colors.active"
                                colorOutput="auto"
                                :alpha="true"
                                :disabled="false"
                                :colorLabels="true"
                                :zIndex="1010">
                            </sw-colorpicker>
                        </div>
                    {% endblock %}

                    {% block blur_elysium_slider_config_arrow_bg_color %}
                        <div style="position:relative;">
                            <sw-colorpicker
                                :label="$tc('blurElysiumSlider.general.bgColor')"
                                v-model="config.bgColors.default"
                                colorOutput="auto"
                                :alpha="true"
                                :disabled="false"
                                :colorLabels="true"
                                :zIndex="1010">
                            </sw-colorpicker>
                        </div>
                    {% endblock %}

                    {% block blur_elysium_slider_config_arrow_bg_color_active %}
                        <div style="position:relative;">
                            <sw-colorpicker
                                :label="$tc('blurElysiumSlider.general.bgColorActive')"
                                v-model="config.bgColors.active"
                                colorOutput="auto"
                                :alpha="true"
                                :disabled="false"
                                :colorLabels="true"
                                :zIndex="1010">
                            </sw-colorpicker>
                        </div>
                    {% endblock %}

                </sw-container>

            </sw-card>
        {% endblock %}
    </div>
{% endblock %}