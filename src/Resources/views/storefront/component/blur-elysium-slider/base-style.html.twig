{% apply spaceless %}
    <style>
        {% for size in sizes %}
            @media screen and (min-width: {{ theme_config('breakpoint.' ~ size.viewport) ~ 'px'}}) {
                #elysiumSlider-{{ elementId }} .cms-element-elysium-slide {
                    {% if size.aspectRatio.width is not empty %} 
                        --aspect-ratio-w: {{size.aspectRatio.width}};
                    {% endif %}
                    {% if size.aspectRatio.height is not empty %} 
                        --aspect-ratio-h: {{size.aspectRatio.height}};
                    {% endif %}
                    {% if size.slidePadding.y is not empty %}
                        --padding-y: {{ size.slidePadding.y }};
                    {% endif %}
                    {% if size.slidePadding.x is not empty %}
                        --padding-x: {{ size.slidePadding.x }};
                    {% endif %}
                    {% if size.maxHeight is not empty %}
                        --max-height: {{ size.maxHeight }};
                    {% endif %}
                }                        
            }
        {% endfor %}      
        {% block cms_element_blur_elysium_slider_css_styles_extend %}{% endblock %}
    </style>
{% endapply %}