{% block component_blur_elysium_slider_navigation %}

    {% set navigationClasses = [
        'blur-esldr__nav',
        'd-flex', 
        'w-100',
        'bullet-shape__' ~ config.shape
    ] %}

    {% if config.position is same as("in_slider") %}
        {% set navigationClasses = navigationClasses|merge([
            'position-absolute',
            'bottom-0',
            'z-3'
        ]) %}
    {% endif %}

    {% if config.active is same as(true) %}
        <ul class="splide__pagination {% block component_blur_elysium_slider_navigation_classes %}{{ navigationClasses|join(' ') }}{% endblock %}"></ul>
    {% endif %}
{% endblock %}