{% block component_blur_elysium_slider_navigation %}

    {% set navigationClasses = [
        'blur-esldr__nav',
        'd-flex', 
        'w-100',
        'gap-3',
        config.navPadding is not empty ? 'padding-' ~ config.navPadding : 'padding-md',
        'justify-content-' ~ config.align,
        'bullet-shape__' ~ config.shape,
        'bullet-size__' ~ config.size
    ] %}

    {% if config.position is same as("in_slider") %}
        {% set navigationClasses = navigationClasses|merge([
            'position-absolute',
            'bottom-0',
            'z-3'
        ]) %}
    {% endif %}

    <style>
        #elysiumSlider-{{ elementId }} .blur-esldr__nav-bullet {
            {% if config.colors.default %}
                --blur-esldr-nav-color: {{config.colors.default}};
            {% endif %}
            background-color: var(--blur-esldr-nav-color);
        }
        #elysiumSlider-{{ elementId }} .blur-esldr__nav-bullet:active,
        #elysiumSlider-{{ elementId }} .blur-esldr__nav-bullet:focus,
        #elysiumSlider-{{ elementId }} .blur-esldr__nav-bullet.is-active,
        #elysiumSlider-{{ elementId }} .blur-esldr__nav-bullet:hover {
            {% if config.colors.active %}
                --blur-esldr-nav-color-active: {{config.colors.active}};
            {% endif %}
            background-color: var(--blur-esldr-nav-color-active);
        }
    </style>

    {% if config.active is same as(true) %}
        <ul class="splide__pagination {% block component_blur_elysium_slider_navigation_classes %}{{ navigationClasses|join(' ') }}{% endblock %}"></ul>
    {% endif %}
{% endblock %}